.dashboard-container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: top;
}

.title-container {
  font-size: 60rpx;
}

.banner-container {
  width: 100%;
}

.swiper-container {
  min-height: 350rpx;
}

.banner-container image {
  width: 100%;
}
/* 
.banner-container image.active {
  display: block;
} */

.tab-container {
  width: 100%;
  padding: 20rpx 0rpx;
  flex: 1;
  z-index: 0;
}

.tab-body {
  display: flex;
  justify-content: center;
  /* background-color: yellow; */
  height: 100%;
}

.panel-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.452);
  z-index: 100;
  transform: translateY(100%);
  transition: all .25s ease;
}

.panel-container.active {
  transform: translateY(0%);
}

.switch-group-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 50rpx 0rpx;
    width: 100%;
    max-height: 1200rpx;
    overflow-y: scroll;
}

.loading-wrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  display: flex;
  flex-direction: column;
  z-index: 999;
}

.loading-info {
  color: white;
  margin-top:30rpx;
}

