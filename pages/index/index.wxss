.home-page-container {
    display: flex;
    padding: 0;
    margin: 0;
    height: 100vh;
    background: #eee;
    flex-direction: column;
    justify-content: space-between;
    background-image: linear-gradient(45deg, #1564ff, #19eaff);
}

.home-page-header {
  display: block;
  height: 100rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}

.home-banner-wrapper {
  margin-top: 60rpx;
  width: 100%; 
  text-align: center;
}

.home-banner-item {
  height: 240rpx;
  width: 240rpx;
  background-color: white;
  padding: 10rpx;
  border-radius: 50%;
}

.home-title-wrapper {
  margin: 10px 0;
  text-align: center;
  color: white;
  font-size: 40rpx;
  text-align: center;
}

.home-content-wrapper {
  display: flex;
  flex-direction: column;
  left: 30rpx;
  min-height: 60vh;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 80rpx 80rpx 0rpx 0rpx;
  box-shadow: 0px 0px 6rpx #fff;
  color: #818181;
  box-shadow: 0 0 20px 4px #00dcff;
}

.home-btn-group {
    display: flex;
    justify-content: space-around;
    margin-top: 30rpx;
    flex-direction: column;
    align-items: center;
    /* flex-wrap: wrap; */
}

.home-btn-item{
  /* margin-top: 40rpx; */
  width: 300rpx;
  display: flex;
  align-items: center;
  transform: translateX(-20rpx);
}

.home-btn-icon {
    font-size: 76rpx;
    margin-right: 40rpx;
    color: #17c2c2;
}

.icon-luyouqi {
    color: #00dbf8;
}

.icon-lanya {
    color: #0077ff;
}

.icon-kongzhi {
    color: #9266f9;
}

.name {
    margin: 20rpx 0;
    font-size: 29rpx;
}